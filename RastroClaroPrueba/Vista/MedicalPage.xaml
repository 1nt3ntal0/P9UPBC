<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RastroClaroPrueba.Vista.MedicalPage">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#778FF4" Offset="0.0"/>
            <GradientStop Color="#61D2E8" Offset="0.5"/>
            <GradientStop Color="#846AFA" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Barra superior -->
        <Grid Grid.Row="0" BackgroundColor="White" Padding="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                <Label Text="Paciente: Nombre" FontSize="14" TextColor="Black" VerticalOptions="Center" />
                <Label Text=" - Usuario: Nombre" FontSize="14" TextColor="Black" VerticalOptions="Center" />
            </StackLayout>
            <Image Grid.Column="1" Source="logo.png" VerticalOptions="Center" HorizontalOptions="End" HeightRequest="70" WidthRequest="100"/>
        </Grid>

        <!-- Formulario Médico -->
        <ScrollView Grid.Row="1" Padding="10">
            <VerticalStackLayout Spacing="10">
                <!-- Título principal en negro -->
                <Label Text="Carta médica" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>

                <Label Text="Nombre del paciente" TextColor="Black"/>
                <Entry Placeholder="Ingrese el nombre" FontSize="14"/>

                <Label Text="Edad" TextColor="Black"/>
                <Entry Placeholder="Ingrese la edad" FontSize="14" Keyboard="Numeric"/>

                <Label Text="Teléfono de emergencia" TextColor="Black"/>
                <Entry Placeholder="Ingrese el teléfono" FontSize="14" Keyboard="Telephone"/>

                <Label Text="Tipo de sangre" TextColor="Black"/>
                <Entry Placeholder="Ingrese el tipo de sangre" FontSize="14"/>

                <Label Text="Religión" TextColor="Black"/>
                <Entry Placeholder="Ingrese la religión" FontSize="14"/>

                <Label Text="Grado de Alzheimer" TextColor="Black"/>
                <Picker Title="Seleccione un grado" FontSize="14">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Inicial</x:String>
                            <x:String>Intermedio</x:String>
                            <x:String>Avanzado</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>

                <Label Text="Dificultades de comunicación" TextColor="Black"/>
                <Entry Placeholder="Ingrese dificultades" FontSize="14"/>

                <Label Text="Teléfono adicional" TextColor="Black"/>
                <Entry Placeholder="Nombre y teléfono" FontSize="14"/>



                <Button Text="Guardar" BackgroundColor="#61D2E8" TextColor="White"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Barra inferior -->
        <Grid Grid.Row="2" BackgroundColor="White" Padding="5">
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="Center">
                <Image Source="mapa.png" HeightRequest="60" WidthRequest="50"/>
                <Image Source="historiall.png" HeightRequest="60" WidthRequest="50"/>
                <Image Source="manual.png" HeightRequest="60" WidthRequest="50"/>
                <Image Source="medicalselect.png" HeightRequest="60" WidthRequest="50">
                    
                </Image>
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>

