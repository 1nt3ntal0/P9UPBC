<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RastroClaroPrueba.Vista.HistorialPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Barra superior con degradado -->
        <Grid Grid.Row="0" Padding="5">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#61D2E8" Offset="0.0"/>
                    <GradientStop Color="#61D2E8" Offset="0.5"/>
                    <GradientStop Color="Transparent" Offset="1.0"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackLayout Orientation="Vertical" VerticalOptions="Center">
                <Label Text="Historial" FontSize="24" TextColor="Black" Margin="10" VerticalOptions="Center" FontAttributes="Bold" />
            </StackLayout>
            <Image Grid.Column="1" Source="logo.png" VerticalOptions="Center" HorizontalOptions="End" HeightRequest="70" WidthRequest="100"/>
        </Grid>

        <!-- Contenido Principal -->
        <ScrollView Grid.Row="1" Padding="10">
            <VerticalStackLayout Spacing="20">
                <Label Text="Filtrar por fecha" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>
                <HorizontalStackLayout Padding="10" Spacing="10" HorizontalOptions="Center">
                    <Entry x:Name="diaEntry" Placeholder="Día" WidthRequest="60" Keyboard="Numeric" Background="#c5f6ff" TextColor="Black"/>
                    <Entry x:Name="mesEntry" Placeholder="Mes" WidthRequest="60" Keyboard="Numeric" Background="#c5f6ff" TextColor="Black"/>
                    <Entry x:Name="anoEntry" Placeholder="Año" WidthRequest="80" Keyboard="Numeric" Background="#c5f6ff" TextColor="Black"/>
                    <Button Text="Buscar" Clicked="OnBuscarClicked" BackgroundColor="#846AFA" TextColor="Black" CornerRadius="10" Padding="5"/>
                </HorizontalStackLayout>

                <!-- WebView para mostrar el historial -->
                <WebView x:Name="webView" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Barra inferior -->
        <Grid Grid.Row="2" Padding="10">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="White" Offset="0.0"/>
                    <GradientStop Color="#846AFA" Offset="0.3"/>
                    <GradientStop Color="#846AFA" Offset="1.0"/>
                </LinearGradientBrush>
            </Grid.Background>

            <HorizontalStackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="Center" Spacing="20">
                <StackLayout HorizontalOptions="Center">
                    <Image Source="mapa_sele.png" HeightRequest="60" WidthRequest="50">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnMapaTapped" />
                        </Image.GestureRecognizers>
                    </Image>
                    <Label Text="Mapa" FontSize="14" TextColor="Black" HorizontalOptions="Center"/>
                </StackLayout>

                <StackLayout HorizontalOptions="Center">
                    <Image Source="historial.png" HeightRequest="60" WidthRequest="50">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnHistorialTapped" />
                        </Image.GestureRecognizers>
                    </Image>
                    <Label Text="Historial" FontSize="14" TextColor="Black" HorizontalOptions="Center"/>
                </StackLayout>

                <StackLayout HorizontalOptions="Center">
                    <Image Source="manual_sele.png" HeightRequest="60" WidthRequest="50">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnManualTapped" />
                        </Image.GestureRecognizers>
                    </Image>
                    <Label Text="Ayuda" FontSize="14" TextColor="Black" HorizontalOptions="Center"/>
                </StackLayout>

                <StackLayout HorizontalOptions="Center">
                    <Image Source="paciente_sele.png" HeightRequest="60" WidthRequest="50">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnPacienteTapped" />
                        </Image.GestureRecognizers>
                    </Image>
                    <Label Text="Paciente" FontSize="14" TextColor="Black" HorizontalOptions="Center"/>
                </StackLayout>
            </HorizontalStackLayout>
        </Grid>
    </Grid>
</ContentPage>