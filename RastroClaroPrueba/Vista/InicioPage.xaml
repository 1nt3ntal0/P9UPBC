<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RastroClaroPrueba.Vista.InicioPage">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#778FF4" Offset="0.0"/>
            <GradientStop Color="#61D2E8" Offset="0.5"/>
            <GradientStop Color="#846AFA" Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Barra superior -->
        <Grid Grid.Row="0" BackgroundColor="White" Padding="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                <Label Text="Paciente: Nombre" FontSize="14" VerticalOptions="Center" />
                <Label Text=" - Usuario: Nombre" FontSize="14" VerticalOptions="Center" />
            </StackLayout>
            <Image Grid.Column="1" Source="logo.png" VerticalOptions="Center" HorizontalOptions="End" HeightRequest="70" WidthRequest="100"/>
        </Grid>


        <Grid>
            <!-- WebView con tamaÃ±o ajustado -->
            <WebView x:Name="webView"
                 HeightRequest="600"
                 WidthRequest="400"
                 VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand"/>
        </Grid>

        <!-- Barra inferior -->
        <Grid Grid.Row="2" BackgroundColor="White" Padding="5">
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="Center">
                <Image Source="mapa.png" HeightRequest="60" WidthRequest="50"/>
                <Image Source="historiall.png" HeightRequest="60" WidthRequest="50">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnHistorialTapped" />
                    </Image.GestureRecognizers>
                </Image>
                <Image Source="manual.png" HeightRequest="60" WidthRequest="50">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnManualTapped" />
                    </Image.GestureRecognizers>
                </Image>
                <Image Source="medical.png" HeightRequest="60" WidthRequest="50">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMedicalImageTapped"/>
                    </Image.GestureRecognizers>
                </Image>
            </StackLayout>
        </Grid>
    </Grid>

</ContentPage>
